<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Services</title>
</head>
<body>
    <h1>Liste des services</h1>
    <table>
        <thead>
            <tr>
                <th>Nom du service</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% services.forEach(service => { %>
                <tr>
                    <td><%= service.name %></td>
                    <td><%= service.price %> â‚¬</td>
                    <td><%= service.description %></td>
                    <td>
                        <a href="/services/<%= service._id %>">Voir</a> |
                        <a href="/services/edit/<%= service._id %>">Modifier</a> |
                        <a href="/services/delete/<%= service._id %>">Supprimer</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/services/add">Ajouter un service</a>
</body>
</html>
