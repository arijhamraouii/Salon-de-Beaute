<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Factures</title>
</head>
<body>
    <h1>Liste des factures</h1>
    <table>
        <thead>
            <tr>
                <th>Nom du client</th>
                <th>Service</th>
                <th>Montant</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% factures.forEach(facture => { %>
                <tr>
                    <td><%= facture.clientName %></td>
                    <td><%= facture.serviceName %></td>
                    <td><%= facture.amount %> â‚¬</td>
                    <td><%= facture.date %></td>
                    <td>
                        <a href="/factures/<%= facture._id %>">Voir</a> |
                        <a href="/factures/edit/<%= facture._id %>">Modifier</a> |
                        <a href="/factures/delete/<%= facture._id %>">Supprimer</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/factures/add">Ajouter une facture</a>
</body>
</html>
